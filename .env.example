# Glance Editor Environment Variables

# Port for the editor server (default: 8081)
EDITOR_PORT=8081

# Path to glance.yml configuration file
CONFIG_PATH=/app/config/glance.yml

# URL to reach the Glance dashboard (used for preview)
GLANCE_URL=http://localhost:8080

# Node environment
NODE_ENV=development

# Optional: Enable authentication for the editor
# ENABLE_AUTH=true
# AUTH_USER=admin
# AUTH_PASS=changeme
